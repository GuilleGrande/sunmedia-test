{% extends 'base.html.twig' %}

{% block body %}
    <h1>Component</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ component.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ component.name }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ component.height }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ component.width }}</td>
            </tr>
            <tr>
                <th>Coorx</th>
                <td>{{ component.coorX }}</td>
            </tr>
            <tr>
                <th>Coory</th>
                <td>{{ component.coorY }}</td>
            </tr>
            <tr>
                <th>Coorz</th>
                <td>{{ component.coorZ }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('component_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('component_edit', { 'id': component.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

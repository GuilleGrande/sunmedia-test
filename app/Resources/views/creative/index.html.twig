{% extends 'base.html.twig' %}

{% block body %}
    <h1>Creatives list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for creative in creatives %}
            <tr>
                <td><a href="{{ path('creative_show', { 'id': creative.id }) }}">{{ creative.id }}</a></td>
                <td>{{ creative.name }}</td>
                <td>{% if creative.status %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('creative_show', { 'id': creative.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('creative_edit', { 'id': creative.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('creative_new') }}">Create a new creative</a>
        </li>
    </ul>
{% endblock %}

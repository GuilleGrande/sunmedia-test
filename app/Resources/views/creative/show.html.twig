{% extends 'base.html.twig' %}

{% block body %}
    <h1>Creative</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ creative.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ creative.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if creative.status %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('creative_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('creative_edit', { 'id': creative.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

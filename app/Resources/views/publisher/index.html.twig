{% extends 'base.html.twig' %}

{% block body %}

    <h1>Publishers list</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {% for publisher in publishers %}
                <tr>
                    <td>
                        <a href="{{ path('publisher_show', {
                            'publisherName': publisher.name
                            })
                        }}">{{ publisher.name }}</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
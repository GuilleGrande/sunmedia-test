{% extends 'base.html.twig' %}

{% block body %}
    <h1>Video</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ video.url }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ video.format }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ video.size }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('video_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('video_edit', { 'id': video.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
